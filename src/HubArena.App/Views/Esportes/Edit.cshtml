@model HubArena.App.ViewModels.EsporteViewModel


<link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

<partial name="_HeaderLogo"></partial>

<div class="container-info">
    <a asp-action="Details" asp-route-id="@Model.IdEsporte">
        <img src="~/img/arrow.svg" alt="">
    </a>
    <h1 class="titulo">ESPORTES</h1>
</div>
<h2 class="subtitulo">Editar</h2>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdEsporte" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="SALVAR" class="btn-form-cadastrar" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
