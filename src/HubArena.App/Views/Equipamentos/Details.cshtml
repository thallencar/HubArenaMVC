@model HubArena.App.ViewModels.EquipamentoViewModel


<link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />

<partial name="_HeaderLogo"></partial>

<div class="container-info">
    <a asp-action="Index">
        <img src="~/img/arrow.svg" alt="">
    </a>
    <h1 class="titulo">EQUIPAMENTOS</h1>
</div>
<h2 class="subtitulo">Informações</h2>


<div class="container-dados">
  
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatusEquipamento)
        </dt>
        <dd class = "col-sm-10">
            @this.StatusDoEquipamento(Model.StatusEquipamento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Esporte)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Esporte.Nome)
        </dd>
        <dt class = "col-sm-2">
            <span>Editar</span>
        </dt>
        <dd class="col-sm-10 componente-editar">
            <a asp-action="Edit" asp-route-id="@Model?.IdEquipamento">
                <img src="~/img/pencil.svg"/>
            </a> 
        </dd>
    </dl>
</div>
<div class="componente-apagar">
    <span>Apagar</span>
    <a asp-action="Delete" asp-route-id="@Model?.IdEquipamento">
        <img src="~/img/trash.svg"/>
    </a> 
</div>
