@model IEnumerable<HubArena.App.ViewModels.EquipamentoViewModel>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Quantidade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.StatusEquipamento)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Esporte)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Quantidade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.StatusEquipamento)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Esporte.Nome)
				</td>
				<td>
					@{
					/*
					<input hidden=" @item.IdEquipamento "id="sequencial-equipamento" />
						*/
					}
					<a asp-action="Edit" asp-route-id="@item.IdEquipamento">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.IdEquipamento">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.IdEquipamento">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
