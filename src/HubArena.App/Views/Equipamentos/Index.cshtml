@model IEnumerable<HubArena.App.ViewModels.EquipamentoViewModel>

<link rel="stylesheet" href="~/css/tabelas.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<partial name="_HeaderLogo"></partial>

<h1 class="titulo">EQUIPAMENTOS</h1>
<div class="container-create">
    <a asp-action="Create" class="subtitulo">
        <img src="~/img/plus.svg" alt="">
        Adicionar novo equipamento
    </a>
</div>

<table>
	
	<tbody>
		@foreach (var item in Model)
		{
            <tr>
                <td>
                    COD.@Html.DisplayFor(modelItem => item.IdEquipamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td class="td-status">
                    @this.StatusDoEquipamento(item.StatusEquipamento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Esporte.Nome)
                </td>
                <td class="td-view">
                    <a asp-action="Details" asp-route-id="@item.IdEquipamento">
                        <img src="~/img/view.svg" alt="View" />
                    </a>
                </td>
            </tr>
		}
	</tbody>
</table>
