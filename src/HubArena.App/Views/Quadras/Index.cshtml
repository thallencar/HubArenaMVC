@model IEnumerable<HubArena.App.ViewModels.QuadraViewModel>

<link rel="stylesheet" href="~/css/tabelas.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<partial name="_HeaderLogo"></partial>

<h1 class="titulo">QUADRAS</h1>
<div class="container-create">
    <a asp-action="Create" class="subtitulo">
        <img src="~/img/plus.svg" alt="">
        Adicionar nova quadra
    </a>
</div>

<table class="table">
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoQuadra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusQuadra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Esporte.Nome)
                </td>
                <td class="td-view">
                    <a asp-action="Details" asp-route-id="@item.IdQuadra">
                        <img src="~/img/view.svg" alt="View" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
