@model HubArena.App.ViewModels.QuadraViewModel
@using HubArena.Business.Enums


<link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />

<partial name="_HeaderLogo"></partial>

<div class="container-info">
    <a asp-action="Index">
        <img src="~/img/arrow.svg" alt="">
    </a>
    <h1 class="titulo">QUADRAS</h1>
</div>
<h2 class="subtitulo">Cadastro</h2>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacidade" class="control-label"></label>
                <input asp-for="Capacidade" class="form-control" type="text"/>
                <span asp-validation-for="Capacidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoQuadra" class="control-label"></label>
                <select multiple asp-for="TipoQuadra" class="form-control form-select">
                    <option value="0">Aberta</option>
                    <option value="1">Fechada</option>
                    <option value="2">Poliesportiva</option>
                    <option value="3">Sintética</option>
                    <option value="4">Grama Natural</option>
                    <option value="5">Areia</option>
                    <option value="6">Madeira</option>
                    <option value="7">Acrílica</option>
                    <option value="8">Concreto</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="StatusQuadra" class="control-label"></label>
                <select asp-for="StatusQuadra" class="form-control form-select">
                    <option value="0">Disponível</option>
                    <option value="1">Reservada</option>
                    <option value="2">Em Uso</option>
                    <option value="3">Em Manutenção</option>
                    <option value="4">Indisponível</option>
                </select>
                <span asp-validation-for="StatusQuadra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEsporte" class="control-label"></label>
                <select asp-for="IdEsporte" class="form-select" asp-items="@(new SelectList(Model.Esportes, "IdEsporte", "Nome"))"></select>
                <span asp-validation-for="IdEsporte" class="text-danger"></span>
            </div>
            <h4 class="mt-3">Endereço</h4>
            <hr />
            <partial name="_Endereco"></partial>
            <div class="form-group">
                <input type="submit" value="CADASTRAR" class="btn-form-cadastrar" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        BuscarCep();
    </script>
}
